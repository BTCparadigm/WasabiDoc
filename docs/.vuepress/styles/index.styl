#app
  // fonts
  font-family Inconsolata, monospace
  font-size 1rem
  font-weight 400
  line-height 1.5

  .theme-default-content
    h1, h2
      font-family playfair display, serif
      font-weight 600
      line-height 1.2

    h1
      font-size 2.5rem
      margin-bottom 1.5rem

    h2
      font-size 2rem

  // navbar
  .navbar
    color $navbarTextColor
    background $navbarBgColor
    .nav-link
      color $navbarTextColor
    .site-name
      color $navbarTextColor
    .links
      background $navbarBgColor
      color $navbarTextColor

    .suggestions
      background $navbarBgColor

    .suggestion
      a
        color $navbarTextColor
      &.focused
        background-color #f3f4f5
        a
          color $accentColor
